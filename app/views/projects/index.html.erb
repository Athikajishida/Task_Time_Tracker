<h1>Projects#index</h1>
<p>Find me in app/views/projects/index.html.erb</p>
<h1>Projects</h1>

<%= form_with url: projects_path, method: :post, local: true do |form| %>
  <%= form.text_field :name, placeholder: "New Project Name" %>
  <%= form.submit "Create" %>
<% end %>

<ul>
  <% @projects.each do |project| %>
    <li>
      <%= project.name %> |
      <%= link_to "Manage Tasks", project_tasks_path(project) %>
    </li>
  <% end %>
</ul>
